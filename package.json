{
  "private": true,
  "name": "tresorama-test-monorepo",
  "version": "0.0.0",
  "repository": "https://github.com/tresorama/generate-text-ideas.git",
  "author": "Jacopo Marrone <jacopo.marrone27@gmail.com>",
  "license": "MIT",
  "packageManager": "yarn@3.2.4",
  "engines": {
    "yarn": ">=3.0.0"
  },
  "workspaces": [
    "apps/**",
    "packages/**"
  ],
  "scripts": {
    "build:try": "yarn workspaces foreach -vpt run build",
    "dev:try": "yarn workspaces foreach -vpt run dev",
    "build": "run-s build:packages build:apps",
    "dev": "run-p dev:packages dev:apps",
    "build:apps": "yarn workspaces foreach --include -v \"@app/*\" run build",
    "dev:apps": "yarn workspaces foreach --include -v \"@app/*\" run dev",
    "build:packages": "yarn workspaces foreach --include -v \"@tresorama-test-lib/*\" run build",
    "dev:packages": "yarn workspaces foreach --include -v \"@tresorama-test-lib/*\" run dev",
    "clean": "yarn workspaces foreach run clean",
    "preinstall": "npx only-allow yarn"
  },
  "dependencies": {
    "npm-run-all": "^4.1.5"
  }
}
